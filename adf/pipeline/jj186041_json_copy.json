{
	"name": "jj186041_json_copy",
	"properties": {
		"activities": [
			{
				"name": "Copy data1",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"additionalColumns": [
							{
								"name": "loadTimestamp",
								"value": "utcNow()"
							}
						],
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "FlattenHierarchy"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "['userId']"
								},
								"sink": {
									"name": "userId",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['firstName']"
								},
								"sink": {
									"name": "firstName",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['lastName']"
								},
								"sink": {
									"name": "lastName",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['phoneNumber']"
								},
								"sink": {
									"name": "phoneNumber",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['emailAddress']"
								},
								"sink": {
									"name": "emailAddress",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['loadTimestamp']"
								},
								"sink": {
									"name": "loadTimestamp",
									"type": "String"
								}
							}
						],
						"collectionReference": "$['users']",
						"mapComplexValuesToString": true
					}
				},
				"inputs": [
					{
						"referenceName": "jj186041_sample_json_input_ds",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "jj186041_sample_output_json_ds",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}