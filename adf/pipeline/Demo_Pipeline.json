{
	"name": "Demo_Pipeline",
	"properties": {
		"activities": [
			{
				"name": "Extract_file_name",
				"type": "SetVariable",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"variableName": "Source_File_Name",
					"value": {
						"value": "@ substirng(pipeline().parameters.File_Name,0,lastindexof(pipeline().parameters.File_Name,'.'))",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Extract_Control_file_Name",
				"type": "SetVariable",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"variableName": "Ctl_File_Name",
					"value": {
						"value": "concat(substirng(variables('Source_File_Name'),0,lastindexof(variables('Source_File_Name'),'.')).'ctl')",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"File_Name": {
				"type": "string",
				"defaultValue": "abc.csv.gz"
			},
			"Container_Name": {
				"type": "string"
			},
			"Input_Dir": {
				"type": "string"
			},
			"Inbound_Dir": {
				"type": "string"
			}
		},
		"variables": {
			"Source_File_Name": {
				"type": "String"
			},
			"Ctl_File_Name": {
				"type": "String"
			}
		},
		"annotations": []
	}
}