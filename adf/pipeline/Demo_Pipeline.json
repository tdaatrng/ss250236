{
	"name": "Demo_Pipeline",
	"properties": {
		"activities": [
			{
				"name": "ExtractFileName",
				"type": "SetVariable",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"variableName": "CSVFileName",
					"value": {
						"value": "@substring(pipeline().parameters.FileName,0,lastindexof(pipeline().parameters.FileName,'.'))",
						"type": "Expression"
					}
				}
			},
			{
				"name": "ExtractCTLFileName",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "ExtractFileName",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "CTLFileName",
					"value": {
						"value": "@concat(substring(variables('CSVFileName'),0,lastindexof(variables('CSVFileName'),'.')),'.ctl')",
						"type": "Expression"
					}
				}
			},
			{
				"name": "CTL file Lookup",
				"type": "Lookup",
				"dependsOn": [
					{
						"activity": "ExtractCTLFileName",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"dataset": {
						"referenceName": "DemoCTL_File",
						"type": "DatasetReference",
						"parameters": {
							"CTLFileName": {
								"value": "@variables('CTLFileName')",
								"type": "Expression"
							}
						}
					}
				}
			},
			{
				"name": "ErrorMailNotify",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "CTL file Lookup",
						"dependencyConditions": [
							"Failed"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": []
			}
		],
		"parameters": {
			"FileName": {
				"type": "string",
				"defaultValue": "ABC.dat.gz"
			},
			"ContainerName": {
				"type": "string"
			},
			"InputDir": {
				"type": "string"
			},
			"InboundDir": {
				"type": "string"
			}
		},
		"variables": {
			"CSVFileName": {
				"type": "String"
			},
			"CTLFileName": {
				"type": "String"
			}
		},
		"folder": {
			"name": "Take2"
		},
		"annotations": []
	}
}