{
	"name": "RestAPI_To_Vantage_Demo",
	"properties": {
		"activities": [
			{
				"name": "Copy_RAPI_ADLS",
				"description": "copy data from Rest Api to ADLS",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET"
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "DS_RESTAPI",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "Json1",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "ADLS_TO_VANTAGE",
				"type": "DatabricksNotebook",
				"dependsOn": [
					{
						"activity": "Copy_RAPI_ADLS",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"notebookPath": "/ah186033/API_DEMO"
				},
				"linkedServiceName": {
					"referenceName": "adb_ls",
					"type": "LinkedServiceReference"
				}
			},
			{
				"name": "Success",
				"type": "ExecutePipeline",
				"dependsOn": [
					{
						"activity": "ADLS_TO_VANTAGE",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"pipeline": {
						"referenceName": "ah186033_email",
						"type": "PipelineReference"
					},
					"waitOnCompletion": true,
					"parameters": {
						"Activity": "Email Success",
						"EmailTo": {
							"value": "abdul.hakimuddin@teradata.com",
							"type": "Expression"
						},
						"Error_Message": {
							"value": "N/A",
							"type": "Expression"
						},
						"Pipe_Line_Name": {
							"value": "@pipeline().Pipeline",
							"type": "Expression"
						},
						"Source_File_Name": {
							"value": "N/A",
							"type": "Expression"
						},
						"Subject": {
							"value": "Pipeline Executed Successfully",
							"type": "Expression"
						}
					}
				}
			},
			{
				"name": "Failure",
				"type": "ExecutePipeline",
				"dependsOn": [
					{
						"activity": "ADLS_TO_VANTAGE",
						"dependencyConditions": [
							"Failed"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"pipeline": {
						"referenceName": "ah186033_email",
						"type": "PipelineReference"
					},
					"waitOnCompletion": true,
					"parameters": {
						"Activity": {
							"value": "Email Failure",
							"type": "Expression"
						},
						"EmailTo": {
							"value": "abdul.hakimuddin@teradata.com",
							"type": "Expression"
						},
						"Error_Message": {
							"value": "Pipeline Failed",
							"type": "Expression"
						},
						"Pipe_Line_Name": {
							"value": "@pipeline().Pipeline",
							"type": "Expression"
						},
						"Source_File_Name": "N/A",
						"Subject": {
							"value": "Pipeline Failed",
							"type": "Expression"
						}
					}
				}
			}
		],
		"annotations": []
	}
}