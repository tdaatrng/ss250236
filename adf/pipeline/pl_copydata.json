{
	"name": "pl_copydata",
	"properties": {
		"activities": [
			{
				"name": "pl_copydata",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET"
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings",
							"filePattern": "arrayOfObjects"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "ds_restapi",
						"type": "DatasetReference",
						"parameters": {
							"relativeurl": {
								"value": "@pipeline().parameters.relativeurl",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_datalakegen2",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Copy data1",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "pl_copydata",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "PreserveHierarchy"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['collection']['version']"
								},
								"sink": {
									"name": "col_version"
								}
							},
							{
								"source": {
									"path": "$['collection']['href']"
								},
								"sink": {
									"name": "col_href"
								}
							},
							{
								"source": {
									"path": "$['collection']['items'][0]['href']"
								},
								"sink": {
									"name": "item_href"
								}
							},
							{
								"source": {
									"path": "$['collection']['items'][0]['data'][0]['name']"
								},
								"sink": {
									"name": "data_name"
								}
							},
							{
								"source": {
									"path": "$['collection']['items'][0]['data'][0]['value']"
								},
								"sink": {
									"name": "data_value"
								}
							},
							{
								"source": {
									"path": "$['collection']['items'][0]['links'][0]['rel']"
								},
								"sink": {
									"name": "link_rel"
								}
							},
							{
								"source": {
									"path": "$['collection']['items'][0]['links'][0]['href']"
								},
								"sink": {
									"name": "link_href"
								}
							}
						],
						"collectionReference": "",
						"mapComplexValuesToString": false
					}
				},
				"inputs": [
					{
						"referenceName": "ds_datalakegen2",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "Json_to_csv",
						"type": "DatasetReference"
					}
				]
			}
		],
		"parameters": {
			"relativeurl": {
				"type": "string",
				"defaultValue": "/speakers"
			}
		},
		"annotations": []
	}
}