{
	"name": "ETLControl_Start_1",
	"properties": {
		"description": "Read the File from Inbound & Verify Zero Byte Check",
		"activities": [
			{
				"name": "Get File Details",
				"description": "Read the File Details from the Inbound Directory",
				"type": "GetMetadata",
				"dependsOn": [
					{
						"activity": "Lookup_For_Source_File_Name",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "InboundFile",
						"type": "DatasetReference",
						"parameters": {
							"Container_Name": {
								"value": "@pipeline().parameters.Container_Name",
								"type": "Expression"
							},
							"Folder_Name": {
								"value": "@pipeline().parameters.Inbound_Folder",
								"type": "Expression"
							},
							"File_Name": {
								"value": "@pipeline().parameters.Source_File_Name",
								"type": "Expression"
							}
						}
					},
					"fieldList": [
						"size"
					],
					"storeSettings": {
						"type": "AzureBlobFSReadSettings",
						"recursive": true
					},
					"formatSettings": {
						"type": "DelimitedTextReadSettings"
					}
				}
			},
			{
				"name": "Check_FileSize",
				"description": "Check the File Size for the files received in inbound directory",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Get File Details",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "File_Size",
					"value": {
						"value": "@string(activity('Get File Details').output.size)",
						"type": "Expression"
					}
				}
			},
			{
				"name": "ZeroByte_File_Check_Validation",
				"description": "Verify If Zero Byte File Received then Send Email Notification to team Else Move the File to Input Directory",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "Check_FileSize",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@equals(variables('File_Size'),'0')",
						"type": "Expression"
					},
					"ifFalseActivities": [
						{
							"name": "Inbound_To_Input",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "DelimitedTextSource",
									"storeSettings": {
										"type": "AzureBlobFSReadSettings",
										"recursive": true
									},
									"formatSettings": {
										"type": "DelimitedTextReadSettings"
									}
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSettings",
										"quoteAllText": true,
										"fileExtension": ".csv"
									}
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "Inbound_File",
									"type": "DatasetReference",
									"parameters": {
										"Container_Name": {
											"value": "@pipeline().parameters.Container_Name",
											"type": "Expression"
										},
										"Inbound_Folder": {
											"value": "@pipeline().parameters.Inbound_Folder",
											"type": "Expression"
										},
										"Source_File_Name": {
											"value": "@pipeline().parameters.Source_File_Name",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "Input_File_Name",
									"type": "DatasetReference",
									"parameters": {
										"Container_Name": {
											"value": "@pipeline().parameters.Container_Name",
											"type": "Expression"
										},
										"Input_Folder": {
											"value": "@pipeline().parameters.Input_Folder",
											"type": "Expression"
										},
										"Source_File_Name": {
											"value": "@pipeline().parameters.Source_File_Name",
											"type": "Expression"
										}
									}
								}
							]
						},
						{
							"name": "Delete_From_Inbound",
							"description": "Delete the File From Inbound once file moved to Input",
							"type": "Delete",
							"dependsOn": [
								{
									"activity": "Inbound_To_Archive",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"dataset": {
									"referenceName": "Inbound_File_Name",
									"type": "DatasetReference",
									"parameters": {
										"Container_Name": {
											"value": "@pipeline().parameters.Container_Name",
											"type": "Expression"
										},
										"Inbound_Folder": {
											"value": "@pipeline().parameters.Inbound_Folder",
											"type": "Expression"
										},
										"Source_File_Name": {
											"value": "@pipeline().parameters.Source_File_Name",
											"type": "Expression"
										}
									}
								},
								"enableLogging": false,
								"storeSettings": {
									"type": "AzureBlobFSReadSettings",
									"recursive": true
								}
							}
						},
						{
							"name": "ADB_Delta_Load",
							"description": "Load Vacation Data into ADB Delta Table",
							"type": "DatabricksNotebook",
							"dependsOn": [
								{
									"activity": "Inbound_To_Archive",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"notebookPath": "/Users/piyush.tanna@qateradatacloud.com/Vacation_Data"
							},
							"linkedServiceName": {
								"referenceName": "adb_ls",
								"type": "LinkedServiceReference"
							}
						},
						{
							"name": "Delete_From_Input",
							"description": "Delete File from Input after successfully load the Delta Table in ADB",
							"type": "Delete",
							"dependsOn": [
								{
									"activity": "ADB_Delta_Load",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"dataset": {
									"referenceName": "Input_File_Name",
									"type": "DatasetReference",
									"parameters": {
										"Container_Name": {
											"value": "@pipeline().parameters.Container_Name",
											"type": "Expression"
										},
										"Input_Folder": {
											"value": "@pipeline().parameters.Input_Folder",
											"type": "Expression"
										},
										"Source_File_Name": {
											"value": "@pipeline().parameters.Source_File_Name",
											"type": "Expression"
										}
									}
								},
								"enableLogging": false,
								"storeSettings": {
									"type": "AzureBlobFSReadSettings",
									"recursive": true
								}
							}
						},
						{
							"name": "Inbound_To_Archive",
							"description": "Copy File from Inbound to Archive directory",
							"type": "Copy",
							"dependsOn": [
								{
									"activity": "Inbound_To_Input",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "DelimitedTextSource",
									"storeSettings": {
										"type": "AzureBlobFSReadSettings",
										"recursive": true
									},
									"formatSettings": {
										"type": "DelimitedTextReadSettings"
									}
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSettings",
										"quoteAllText": true,
										"fileExtension": ".csv"
									}
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "Inbound_File",
									"type": "DatasetReference",
									"parameters": {
										"Container_Name": {
											"value": "@pipeline().parameters.Container_Name",
											"type": "Expression"
										},
										"Inbound_Folder": {
											"value": "@pipeline().parameters.Inbound_Folder",
											"type": "Expression"
										},
										"Source_File_Name": {
											"value": "@pipeline().parameters.Source_File_Name",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "Archive_File",
									"type": "DatasetReference",
									"parameters": {
										"Container_Name": {
											"value": "@pipeline().parameters.Container_Name",
											"type": "Expression"
										},
										"Source_File_Name": {
											"value": "@pipeline().parameters.Source_File_Name",
											"type": "Expression"
										},
										"Archive_Folder": {
											"value": "@pipeline().parameters.Archive_Folder",
											"type": "Expression"
										}
									}
								}
							]
						}
					],
					"ifTrueActivities": [
						{
							"name": "If Zero Byte Check True",
							"description": "If Zero Byte Validation True Then Execute",
							"type": "ExecutePipeline",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "ETLControl_Start_2",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true,
								"parameters": {
									"Source_File_Name": {
										"value": "@pipeline().parameters.Source_File_Name",
										"type": "Expression"
									},
									"Inbound_Folder": {
										"value": "@pipeline().parameters.Inbound_Folder",
										"type": "Expression"
									},
									"Container_Name": {
										"value": "@pipeline().parameters.Container_Name",
										"type": "Expression"
									},
									"Reject_Folder": {
										"value": "@pipeline().parameters.Reject_Folder",
										"type": "Expression"
									}
								}
							}
						}
					]
				}
			},
			{
				"name": "Lookup_For_Source_File_Name",
				"description": "This Activity will look for the required Source File into Inbound Directory and if available then only move further.",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": []
			}
		],
		"parameters": {
			"Container_Name": {
				"type": "String"
			},
			"Inbound_Folder": {
				"type": "String"
			},
			"Reject_Folder": {
				"type": "String"
			},
			"Source_File_Name": {
				"type": "String"
			},
			"Input_Folder": {
				"type": "String"
			},
			"Archive_Folder": {
				"type": "String"
			}
		},
		"variables": {
			"File_Size": {
				"type": "String"
			}
		},
		"annotations": []
	}
}